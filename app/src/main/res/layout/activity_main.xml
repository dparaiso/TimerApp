<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="160dp">

        <TextView
            android:id="@+id/text_view_countdown"
            android:layout_width="103dp"
            android:layout_height="51dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/quickStart"
            android:paddingLeft="500dp"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="155dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_sets"
        android:layout_width="103dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="10sp"
        android:text="@string/sets"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="500dp"
        tools:layout_editor_absoluteY="504dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="100dp">

        <Button
            android:id="@+id/minus"
            android:layout_width="71dp"
            android:layout_height="37dp"
            android:text="@string/minus"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="60dp" />

        <TextView
            android:id="@+id/text_numSets"
            android:layout_width="63dp"
            android:layout_height="38dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="107dp" />


        <Button
            android:id="@+id/plus"
            android:layout_width="64dp"
            android:layout_height="37dp"
            android:layout_gravity="left"
            android:paddingLeft="100dp"
            android:text="@string/plus"
            tools:layout_editor_absoluteX="3009dp"
            tools:layout_editor_absoluteY="60dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="170dp">

        <TextView
            android:id="@+id/text_rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/rest"
            android:textColor="@android:color/black"
            android:textSize="17sp"
            tools:layout_editor_absoluteX="284dp"
            tools:layout_editor_absoluteY="135dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="120dp"
        >
        <EditText
            android:id="@+id/minutes"
            android:layout_width="73dp"
            android:layout_height="88dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="233dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="217dp" />

        <EditText
            android:id="@+id/seconds"
            android:layout_width="78dp"
            android:layout_height="85dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="196dp" />

    </LinearLayout>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="150dp">
    <TextView
        android:id="@+id/text_work"
        android:layout_width="78dp"
        android:layout_height="51dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="@string/work"
        android:textColor="@android:color/black"
        android:textSize="17sp"
        tools:layout_editor_absoluteX="74dp"
        tools:layout_editor_absoluteY="158dp" />
</LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="120dp"
        >

        <EditText
            android:id="@+id/minutes2"
            android:layout_width="80dp"
            android:layout_height="84dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="28dp"
            tools:layout_editor_absoluteY="217dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="13dp"
            android:layout_height="wrap_content"
            android:text=":"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="289dp"
            tools:layout_editor_absoluteY="172dp" />

        <EditText
            android:id="@+id/seconds2"
            android:layout_width="75dp"
            android:layout_height="85dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="60sp"
            tools:layout_editor_absoluteX="122dp"
            tools:layout_editor_absoluteY="217dp" />
    </LinearLayout>



<androidx.appcompat.widget.LinearLayoutCompat
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="140dp"
    android:paddingTop="10dp">

    <Button
        android:id="@+id/quickStart"
        android:layout_width="131dp"
        android:layout_height="72dp"
        android:text="@string/set"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="461dp" />

</androidx.appcompat.widget.LinearLayoutCompat>
    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="130dp"
        android:paddingTop="15dp"
        >
        <Button
            android:id="@+id/start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello World!"
            tools:layout_editor_absoluteX="140dp"
            tools:layout_editor_absoluteY="561dp"
            android:paddingLeft="30dp"/>
    </androidx.appcompat.widget.LinearLayoutCompat>

</LinearLayout>