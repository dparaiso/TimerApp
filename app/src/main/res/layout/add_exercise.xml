<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingBottom="5dp">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/edit_exercise_name"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:layout_weight="1"
        android:hint="Exercise Name"
        android:textSize="14sp"
        android:paddingLeft="10dp"/>

    <TextView
        android:id="@+id/text_sets"
        android:layout_width="103dp"
        android:layout_height="20dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_gravity="center"
        android:gravity="center"
        android:paddingRight="10sp"
        android:text="@string/sets"
        android:textColor="@android:color/black"
        android:textSize="15sp"
        tools:layout_editor_absoluteX="500dp"
        tools:layout_editor_absoluteY="504dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingRight="10dp"
        android:paddingLeft="100dp">

        <Button
            android:id="@+id/minus"
            android:layout_width="71dp"
            android:layout_height="30dp"
            android:text="@string/minus"
            android:textSize="10dp"
            android:textAlignment="center"
            android:gravity="center"
            tools:layout_editor_absoluteX="89dp"
            tools:layout_editor_absoluteY="60dp" />

        <TextView
            android:id="@+id/text_numSets"
            android:layout_width="63dp"
            android:layout_height="19dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="1"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="178dp"
            tools:layout_editor_absoluteY="107dp" />


        <Button
            android:id="@+id/plus"
            android:layout_width="71dp"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:textSize="10dp"
            android:textAlignment="center"
            android:gravity="center"
            android:paddingLeft="100dp"
            android:text="+"
            tools:layout_editor_absoluteX="3009dp"
            tools:layout_editor_absoluteY="60dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Work:   "
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/work_minutes"
            android:layout_width="36dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="233dp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="217dp" />

        <EditText
            android:id="@+id/work_seconds"
            android:layout_width="36dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="196dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="       Rest:   "
            android:textSize="20dp"
            android:textColor="@color/black"/>

        <EditText
            android:id="@+id/rest_minutes"
            android:layout_width="36dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="225dp"
            tools:layout_editor_absoluteY="233dp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text=":"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="200dp"
            tools:layout_editor_absoluteY="217dp" />

        <EditText
            android:id="@+id/rest_seconds"
            android:layout_width="36dp"
            android:layout_height="45dp"
            android:ems="10"
            android:hint="00"
            android:inputType="number"
            android:maxLength="2"
            android:textSize="20sp"
            tools:layout_editor_absoluteX="303dp"
            tools:layout_editor_absoluteY="196dp" />

    </LinearLayout>





</LinearLayout>